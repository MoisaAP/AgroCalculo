<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_sementes"
    tools:context=".SementesActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputArea"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="@color/Cinza"
        app:boxStrokeColor="@color/Verde"
        app:cursorColor="@color/white"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputPMS">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area ex: 15 ha (Opcional)"
            android:inputType="number|numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/Verde"
            android:textSize="16sp"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPMS"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="@color/Cinza"
        app:boxStrokeColor="@color/Verde"
        app:cursorColor="@color/white"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputGermin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_PMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PMS ex: 150g (Opcional)"
            android:inputType="number|numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/Verde"
            android:textSize="16sp"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputGermin"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="@color/Cinza"
        app:boxStrokeColor="@color/Verde"
        app:cursorColor="@color/white"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputEspLinhas">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_PodGermi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Poder germinativo ex: 95% (Opcional)"
            android:inputType="number|numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/Verde"
            android:textSize="16sp"
            android:visibility="visible" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEspLinhas"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="@color/Cinza"
        app:boxStrokeColor="@color/Verde"
        app:cursorColor="@color/white"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputSemLine">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_EspLinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Espaço entre linhas ex: 45cm"
            android:inputType="number|numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/Verde"
            android:textSize="16sp"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputSemLine"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="@color/Cinza"
        app:boxStrokeColor="@color/Verde"
        app:cursorColor="@color/white"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_PopLinSem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="População linear ex: 12.5 sem/m"
            android:inputType="number|numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/Verde"
            android:textSize="16sp"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_CalPopPlanta"
        style="@style/BotaoAgro"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputArea" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Verde"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


